<tal:sections
     xmlns:tal="http://xml.zope.org/namespaces/tal"
     xmlns:metal="http://xml.zope.org/namespaces/metal"
     xmlns:i18n="http://xml.zope.org/namespaces/i18n"
     tal:define="portal_tabs view/portal_tabs"
     tal:condition="portal_tabs"
     i18n:domain="plone">

  <p class="hiddenStructure" i18n:translate="heading_sections">Navigation</p>
  <nav class="plone-navbar" id="portal-globalnav-wrapper">
    <div class="container">
      <div class="plone-navbar-header">
        <button type="button" class="plone-navbar-toggle" data-toggle="collapse" data-target="#portal-globalnav-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <?python
          import random
          from plone import api
          portal = api.portal.get()
          abs_url=portal.absolute_url()
          color=['blue','green'
              ,'orange','red','yellow']
      ?>
    <div class="nicdark_section nicdark_bg_greydark nicdark_displaynone_responsive" id="login_bar">
        <div class="nicdark_container nicdark_clearfix">
            <div class="grid grid_6">
                <div class="nicdark_focus">
                    <h6 class="white">
                        <i class="icon-phone-outline"></i>&nbsp;&nbsp;(00) +12321312
                    </h6>
                </div>
            </div>
            <div class="grid grid_6 right">
                <div class="nicdark_focus right">
                    <h6 class="white">
                        &nbsp;&nbsp;&nbsp;&nbsp;<span class="grey">Â·</span>&nbsp;&nbsp;&nbsp;&nbsp;
                        <i class="icon-lock-1 "></i>&nbsp;&nbsp;
                        <a class="white nicdark_mpopup_ajax" 
                        tal:attributes="href string:${python:'%s/++theme++theme/form-login.html' % abs_url}">LOG IN</a>
                    </h6>
                </div>
            </div>
        </div>
      </div>
      <div class="plone-collapse plone-navbar-collapse" id="portal-globalnav-collapse">
        <ul class="nicdark_menu nicdark_margin010 nicdark_padding50"
            id="portal-globalnav"
            tal:define="selected_tab python:view.selected_portal_tab">
            <tal:tabs tal:repeat="tab portal_tabs">
            <?python choice_color=random.choice(color)?>
              <li tal:define="tid tab/id"
                  tal:attributes="id string:portaltab-${tid};"
                  class="${choice_color}">
                  <a href=""
                     tal:content="tab/name"
                     tal:attributes="href tab/url;
                                     title tab/description|nothing;
                                     target tab/link_target|nothing;">
                    Tab Name
                  </a>
              </li>
            </tal:tabs>
        </ul>
        
      </div>
    </div>
  </nav>

</tal:sections>
